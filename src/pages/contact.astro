        const textToCopy = document.getElementById('mail');
        
        // Attach the click event listener to the element
        textToCopy?.addEventListener('click', function() {
          copyText(this);
        });
      })

      // Modern method using Clipboard API with explicit type in TypeScript
      function copyText(element: HTMLElement): void {
        const text = element.textContent || ""; // Ensure text is not null
        if (navigator.clipboard) {
          navigator.clipboard.writeText(text)
            .then(() => {
              alert(`Copied to clipboard: "${text}"`);
            })
            .catch((err) => {
              console.error('Failed to copy text:', err);
            });
        } else {
          alert("Clipboard API not supported in your browser.");
        }
      }
