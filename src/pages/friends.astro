<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Red Background with Blue Circle Jumping Around</title>
<style>
  body {
    background-color: red; /* Setting the background color to red */
    display: flex;
    justify-content: center; /* Centering the circle horizontally */
    align-items: center; /* Centering the circle vertically */
    height: 100vh; /* Full viewport height */
    margin: 0; /* Removing default margin */
  }
  
  .blue-circle {
    width: 200px; /* Set the width of the circle */
    height: 200px; /* Set the height of the circle */
    background-color: blue; /* Setting the circle color to blue */
    border-radius: 50%; /* Making it a circle */
    display: flex;
    justify-content: center;
    align-items: center;
    color: white; /* Setting text color to white for visibility, optional */
    font-size: 24px; /* Optional: Adjusting font size for text inside */
    position: relative; /* Setting position to relative */
  }
</style>
</head>
<body>

<div class="blue-circle" id="circle">
  Center
</div>

<script>
  // Get the circle element
  const circle = document.getElementById('circle');

  // Function to generate a random position within the window
  function getRandomPosition() {
    const containerWidth = window.innerWidth - 200; // Adjusting for circle width
    const containerHeight = window.innerHeight - 200; // Adjusting for circle height
    const randomX = Math.random() * containerWidth;
    const randomY = Math.random() * containerHeight;
    return { x: randomX, y: randomY };
  }

  // Function to move the circle to a random position
  function moveCircle() {
    const newPosition = getRandomPosition();
    circle.style.left = `${newPosition.x}px`;
    circle.style.top = `${newPosition.y}px`;
  }

  // Initial movement
  moveCircle();

  // Set interval to make the circle move every 2 seconds
  setInterval(moveCircle, 2000);
</script>

</body>
</html>
