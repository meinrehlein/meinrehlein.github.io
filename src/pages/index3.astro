<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      margin: 0;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scaleX(-1); /* Flip the video horizontally */
      transition: transform 0.3s ease-in-out;
    }
  </style>
</head>
<body>
  <video id="video" loop muted autoplay>
    <source src=C:\Users\janni\Documents\Astro\basics\public\PXL_20230807_151939548.mp4 type="video/mp4">
    Your browser does not support the video tag.
  </video>

  <script>
    document.addEventListener('mousemove', function(event) {
      const screenWidth = window.innerWidth;
      const cursorX = event.clientX;
      const video = document.getElementById('video');

      const progress = cursorX / screenWidth;
      video.currentTime = progress * video.duration;

      const scaleXValue = cursorX < screenWidth / 2 ? 1 : -1;
      video.style.transform = `scaleX(${scaleXValue})`;
    });
  </script>
</body>
</html>
